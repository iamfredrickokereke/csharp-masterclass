<Window x:Class="WPF_01C.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_01C"
        mc:Ignorable="d"
        Title="My first GUI" Height="350" Width="525">
    <!-- Xaml -> Extensible Aplication Markup Language -->

    
    <StackPanel>
        <TextBox Name="MyTextBox" Width="100" Margin="50" Text="{Binding ElementName=MySlider, Path=Background, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <!-- Slider binding mode -->
        <Slider IsSnapToTickEnabled="True" Name="MySlider" Background="Aqua" Minimum="0" Maximum="100"></Slider>
    </StackPanel>

</Window>
